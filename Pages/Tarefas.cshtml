@page
@model TarefasApp.Pages.TarefasModel
@{
    ViewData["Title"] = "Tarefas";
}
<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h3 m-0">Tarefas</h1>
  <button class="btn btn-success" id="btnNovaTarefa">Incluir tarefa</button>
</div>

<div class="row g-2 mb-3">
  <div class="col-12 col-md-3">
    <label class="form-label">Status</label>
    <select id="filtroStatus" class="form-select">
      <option value="todas">Todas</option>
      <option value="pendente">Pendentes</option>
      <option value="concluida">Concluídas</option>
      <option value="cancelada">Canceladas</option>
    </select>
  </div>
  <div class="col-12 col-md-5">
    <label class="form-label">Buscar (título/descrição)</label>
    <input id="filtroTexto" class="form-control" placeholder="Ex.: prova, pagamento, reunião..." />
  </div>
  <div class="col-12 col-md-4">
    <label class="form-label">Ordenar por</label>
    <select id="ordenarPor" class="form-select">
      <option value="data_asc">Data prevista (mais antigas primeiro)</option>
      <option value="data_desc">Data prevista (mais recentes primeiro)</option>
      <option value="titulo_asc">Título (A→Z)</option>
      <option value="titulo_desc">Título (Z→A)</option>
      <option value="status">Status</option>
    </select>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-sm table-hover align-middle" id="tblTarefas" aria-describedby="ajudaTabela">
    <thead class="table-dark">
      <tr>
        <th>Título</th>
        <th>Descrição</th>
        <th>Data prevista</th>
        <th>Status</th>
        <th>Datas</th>
        <th style="width:220px">Ações</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
  <p id="ajudaTabela" class="text-secondary small">Os dados ficam no seu navegador (localStorage). Não vão para o servidor.</p>
</div>

<div class="modal fade" id="tarefaModal" tabindex="-1" aria-labelledby="tarefaModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tarefaModalLabel">Nova tarefa</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="tarefaId" />
        <div class="mb-3">
          <label for="titulo" class="form-label">Título</label>
          <input id="titulo" class="form-control" required />
        </div>
        <div class="mb-3">
          <label for="descricao" class="form-label">Descrição</label>
          <textarea id="descricao" class="form-control" rows="3" required></textarea>
        </div>
        <div class="mb-3">
          <label for="dataPrevista" class="form-label">Data prevista</label>
          <input id="dataPrevista" type="date" class="form-control" required />
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-success" id="btnSalvar">Salvar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script src="/js/tarefas.js"></script>
}
